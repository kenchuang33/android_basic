<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="36dp"
        android:padding="30dp"
        android:text="Modifying com.example.bmrcalculator.Record"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="12dp"
        android:padding="25dp"
        android:text="Name:"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/modifyingName"
        android:layout_width="173dp"
        android:layout_height="69dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="44dp"
        android:hint="請輸入"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

    </EditText>

    <EditText
        android:id="@+id/modifyingAge"
        android:layout_width="173dp"
        android:layout_height="69dp"

        android:layout_marginTop="13dp"
        android:layout_marginEnd="44dp"
        android:hint="請輸入"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifyingradioGroup"></EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:padding="25dp"
        android:text="Gender:"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"

        android:padding="25dp"
        android:text="Age:"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView

        android:id="@+id/textView5"
        android:layout_width="146dp"
        android:layout_height="72dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"

        android:padding="25dp"
        android:text="Height(cm):"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="146dp"
        android:layout_height="73dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"

        android:padding="25dp"
        android:text="weight(kg):"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <RadioGroup
        android:id="@+id/modifyingradioGroup"
        android:layout_width="207dp"
        android:layout_height="103dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifyingName">

        <RadioButton
            android:id="@+id/modifyingMale"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginTop="35dp"

            android:layout_marginEnd="13dp"
            android:text="Male"
            app:layout_constraintEnd_toStartOf="@+id/Female"
            app:layout_constraintTop_toBottomOf="@+id/Name" />

        <RadioButton
            android:id="@+id/modifyingFemale"
            android:layout_width="108dp"
            android:layout_height="59dp"
            android:layout_marginTop="36dp"

            android:layout_marginEnd="16dp"
            android:text="Female"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Name" />

    </RadioGroup>

    <Button
        android:id="@+id/cancel"
        android:layout_width="116dp"
        android:layout_height="67dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="39dp"
        android:text="cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/modifyingsend"
        android:layout_width="113dp"
        android:layout_height="63dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:text="Send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifyingweight" />

    <EditText
        android:id="@+id/modifyingheight"
        android:layout_width="173dp"
        android:layout_height="69dp"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:hint="請輸入"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifyingAge">

    </EditText>

    <EditText
        android:id="@+id/modifyingweight"
        android:layout_width="173dp"
        android:layout_height="69dp"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="44dp"
        android:hint="請輸入"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifyingheight"></EditText>


</androidx.constraintlayout.widget.ConstraintLayout>